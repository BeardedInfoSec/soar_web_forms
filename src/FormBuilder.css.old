.form-builder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.element-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.element-button {
  margin: 5px;
  padding: 10px 20px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.element-button:hover {
  background-color: #0056b3;
}

.clear-elements {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #dc3545;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.clear-elements:hover {
  background-color: #c82333;
}

.visualizer {
  width: 100%;
  display: flex;
  justify-content: center;
}

.form-preview {
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 90%;
  margin: 0 auto;
}

.draggable {
  padding: 10px;
  border-radius: 5px;
  transition: transform 0.2s ease;
}

.dragging {
  border: 1px solid #ddd;
  background-color: #f0f8ff;
  z-index: 1000;
}

.form-element-label {
  display: block;
  width: 100%;
}

.form-element-input {
  width: 100%;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.form-element-button {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.form-element-button:hover {
  background-color: #0056b3;
}

.form-element-divider {
  border: 1px solid #ccc;
}

.element-editor {
  position: fixed;
  top: 20%;
  right: 20px;
  width: 300px;
  padding: 20px;
  background-color: white;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.element-editor h3 {
  margin-top: 0;
}

.element-editor label {
  display: block;
  margin-bottom: 10px;
}

.element-editor input,
.element-editor select {
  width: 100%;
  padding: 5px;
  margin-top: 5px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.delete-element-btn {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #dc3545;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.delete-element-btn:hover {
  background-color: #c82333;
}

.save-form-section {
  margin-top: 20px;
}

.save-form-btn {
  padding: 10px 20px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.save-form-btn:hover {
  background-color: #218838;
}