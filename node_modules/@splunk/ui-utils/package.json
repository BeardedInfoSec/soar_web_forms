{
  "name": "@splunk/ui-utils",
  "version": "1.10.0",
  "description": "Library of common UI utilities",
  "scripts": {
    "build": "babel src -d . --ignore \"**/docs\" --ignore \"**/tests\"",
    "docs": "NODE_ENV=production webpack --config docs.gen.webpack.config.js",
    "docs:publish": "eval $(splunk-docs-package docs) && artifact-ci publish generic $DOCS_GEN_OUTPUT_NAME $DOCS_GEN_REMOTE_PATH",
    "docs:publish:external": "eval $(splunk-docs-package docs-external --suffix=public) && artifact-ci publish generic $DOCS_GEN_OUTPUT_NAME $DOCS_GEN_REMOTE_PATH",
    "docs:start": "webpack serve --config docs.gen.webpack.config.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:ci": "yarn run lint -- -f junit -o test-reports/lint-results.xml",
    "start": "yarn build --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "license": "Apache-2.0",
  "author": "Splunk Inc.",
  "dependencies": {
    "keycode": "^2.1.9",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@splunk/babel-preset": "^4.0.0",
    "@splunk/eslint-config": "^5.0.0",
    "@splunk/react-docs": "^1.1.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "chai": "^3.5.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-webpack": "^0.13.4",
    "eslint-plugin-import": "^2.30.1",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^10.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "engines": {
    "node": ">=14"
  }
}
